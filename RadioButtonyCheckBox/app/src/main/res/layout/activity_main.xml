<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroupEquipos"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonReal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Real Madrid"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radioButtonAtletico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AtlÃ©tico de Madrid"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radioButtonZaragoza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zaragoza"
            android:textSize="30sp" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonMostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="mostrarValores"
        android:text="Mostrar valores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupEquipos" />

    <CheckBox
        android:id="@+id/checkBoxLocal"
        android:layout_width="96dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:text="Es local"
        app:layout_constraintEnd_toEndOf="@+id/radioGroupEquipos"
        app:layout_constraintStart_toStartOf="@+id/radioGroupEquipos"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupEquipos" />

    <CheckBox
        android:id="@+id/checkBoxCamiseta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambio camiseta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxLocal" />
</androidx.constraintlayout.widget.ConstraintLayout>